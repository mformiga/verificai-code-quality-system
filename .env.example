# VerificAI Environment Configuration
# Copy this file to .env and adjust the values as needed

# Environment Detection
# Set VERCEL=true when deploying to Vercel, otherwise leave empty/false for local development
VERCEL=false

# Local PostgreSQL Database Configuration (used when VERCEL=false)
DATABASE_URL=postgresql://verificai:verificai123@localhost:5432/verificai
DATABASE_TEST_URL=postgresql://verificai_test:verificai_test123@localhost:5433/verificai_test

# Supabase Configuration (used when VERCEL=true)
# Get these values from your Supabase project dashboard > Settings > API
SUPABASE_URL=https://your-project-ref.supabase.co
SUPABASE_PROJECT_REF=your-project-ref
SUPABASE_ANON_KEY=your-supabase-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key-here

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_TEST_URL=redis://localhost:6380

# LLM Provider API Keys
OPENAI_API_KEY=sk-your-openai-key-here
ANTHROPIC_API_KEY=sk-your-anthropic-key-here

# Application Configuration
SECRET_KEY=your-secret-key-here-change-in-production
ENVIRONMENT=development
DEBUG=true

# Frontend Configuration
VITE_API_BASE_URL=http://localhost:8000
VITE_API_BASE_URL=https://your-app-domain.vercel.app/api

# GitHub Configuration (for repository integration)
GITHUB_TOKEN=your-github-token-here
GITHUB_WEBHOOK_SECRET=your-webhook-secret-here

# File Upload Settings
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_FILE_EXTENSIONS=.py,.js,.ts,.jsx,.tsx,.java,.cpp,.c,.cs,.php,.rb,.go,.rs

# LLM Configuration
MAX_TOKENS=4096
TEMPERATURE=0.1
TOP_P=0.9
MODEL=gpt-4-turbo-preview

# Security Settings
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Monitoring & Logging
LOG_LEVEL=INFO
SENTRY_DSN=your-sentry-dsn-here
MONITORING_ENABLED=false

# Development Settings
DEV_DATABASE_URL=postgresql://verificai:verificai123@localhost:5432/verificai_dev
DEV_REDIS_URL=redis://localhost:6379